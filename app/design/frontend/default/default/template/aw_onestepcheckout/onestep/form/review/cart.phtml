					$j("#checkout-payment-method-load input[name='payment[method]']").each(function(){
						if($j(this).is(":checked") && $j(this).val() == "<?php echo Mage_Payment_Model_Method_Banktransfer::PAYMENT_METHOD_BANKTRANSFER_CODE ?>" ){$j(".uniqecode").show();}
						if($j(this).is(":checked") && $j(this).val() == "<?php echo Icube_Bcabanktransfer_Model_Bcabanktransfer::PAYMENT_METHOD_BCABANKTRANSFER_CODE ?>"){$j(".uniqecode").show();}
						if($j(this).is(":checked") && $j(this).val() == "<?php echo Icube_Mandiribanktransfer_Model_Mandiribanktransfer::PAYMENT_METHOD_MANDIRIBANKTRANSFER_CODE ?>"){$j(".uniqecode").show();}
					});
				}
			});
		});
		</script>
