		$j(document).ready(function(){
		     
			$j(".aw-onestepcheckout-cart-table-total tfoot tr td").each(function(){
				if($j(this).html().trim() == "Unique Code"){
					$j(this).parent().addClass( "uniqecode");
					$j(".aw-onestepcheckout-cart-table-total tfoot tr:eq(1) td:first-child").css('text-align','left');					
					$j(".aw-onestepcheckout-cart-table-total tfoot tr:eq(1) td:first-child").removeClass('a-right');	
					$j(".aw-onestepcheckout-cart-table-total tfoot tr:eq(2) td:first-child").css('text-align','left');					
					$j(".aw-onestepcheckout-cart-table-total tfoot tr:eq(2) td:first-child").removeClass('a-right');	
                    $j(".aw-onestepcheckout-cart-table-total tfoot tr:eq(3) td:last-child").css('text-align','right');					
